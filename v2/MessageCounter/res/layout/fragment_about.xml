<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.ae.apps.messagecounter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- The toolbar -->

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_large" >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/padding_small" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium" >

                    <ImageView
                        android:id="@+id/appIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="start"
                        android:layout_marginLeft="0dp"
                        android:layout_marginStart="0dp"
                        android:contentDescription="@string/empty_text"
                        android:padding="@dimen/padding_small"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/appVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_margin="2dip"
                        android:layout_toEndOf="@+id/appIcon"
                        android:layout_toRightOf="@+id/appIcon"
                        android:text="@string/app_name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/appDeveloper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/appVersion"
                        android:layout_gravity="start"
                        android:layout_margin="2dip"
                        android:layout_toEndOf="@+id/appIcon"
                        android:layout_toRightOf="@+id/appIcon"
                        android:text="@string/app_version" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/appDeveloper"
                        android:layout_gravity="start"
                        android:layout_margin="2dip"
                        android:layout_toEndOf="@+id/appIcon"
                        android:layout_toRightOf="@+id/appIcon"
                        android:text="@string/app_developer_info" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/padding_small" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dip"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/app_desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/app_disclaim" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/silver"
                        android:padding="@dimen/card_padding" />

                    <RelativeLayout
                        android:id="@+id/viewSourceCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true" >

                        <ImageView
                            android:id="@+id/imgGithub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_margin="@dimen/margin_medium"
                            android:contentDescription="@string/empty_text"
                            android:src="@drawable/icon_github" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/imgGithub"
                            android:layout_toRightOf="@+id/imgGithub"
                            android:text="@string/github_source_visible_url" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/silver"
                        android:padding="@dimen/card_padding" />

                    <RelativeLayout
                        android:id="@+id/viewLicense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true" >

                        <ImageView
                            android:id="@+id/imgLicense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_margin="@dimen/margin_medium"
                            android:contentDescription="@string/empty_text"
                            android:src="@drawable/icon_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@+id/imgLicense"
                            android:layout_toRightOf="@+id/imgLicense"
                            android:gravity="center_vertical"
                            android:text="@string/menu_license" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>