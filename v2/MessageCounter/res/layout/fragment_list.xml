<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dip" >

    <LinearLayout
        android:id="@+id/messageInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        style="@style/HighlightedTextArea"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messageCountAtGlanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_text"
            tools:context=".MainActivity" />
    </LinearLayout>

    <TextView
        android:id="@+id/pageTitleText"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageInfo"
        android:paddingLeft="4dip"
        android:text="@string/title_list_page"
        tools:context=".MainActivity" />

    <!-- The List Container -->

    <LinearLayout
        android:id="@+id/listContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pageTitleText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dip"
            android:gravity="center_vertical"
            android:text="@string/empty_list" />
    </LinearLayout>

</RelativeLayout>