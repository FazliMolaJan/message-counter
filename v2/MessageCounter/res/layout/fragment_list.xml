<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dip" >

    <LinearLayout
        android:id="@+id/messageInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#BEBEBE"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/inboxMessageCountText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_text"
            tools:context=".MainActivity" />

        <TextView
            android:id="@+id/sentMessageCountText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_text"
            tools:context=".MainActivity" />

        <TextView
            android:id="@+id/allMessageCountText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_text"
            tools:context=".MainActivity" />
    </LinearLayout>

    <TextView
        android:id="@+id/pageTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageInfo"
        android:paddingLeft="4dip"
        style="?android:attr/listSeparatorTextViewStyle"
        android:text="@string/title_list_page"
        tools:context=".MainActivity" />

    <!-- The List Container -->

    <LinearLayout
        android:id="@+id/listContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pageTitleText" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_gravity="center_vertical"
            android:text="@string/empty_list" />
    </LinearLayout>

</RelativeLayout>